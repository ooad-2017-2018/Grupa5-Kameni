        <TextBlock x:Name="textBlock_Copy1" HorizontalAlignment="Left" Margin="50,374,0,0" Text="Godište:" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="36" FontFamily="Arial" FontWeight="Bold" FontStyle="Italic"/>
        <TextBlock x:Name="textBlock_Copy2" HorizontalAlignment="Left" Margin="50,475,0,0" Text="Naziv dijela:" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="36" FontFamily="Arial" FontWeight="Bold" FontStyle="Italic"/>
