        <TextBox x:Name="textBoxKolicinaArt" HorizontalAlignment="Left" Margin="501,485,0,0" Text="" VerticalAlignment="Top" Width="250" Height="38" FontSize="20"/>
        <ComboBox x:Name="comboBoxArtOdgovaraMotoru" HorizontalAlignment="Left" Margin="501,742,0,0" VerticalAlignment="Top" Width="250" Height="37" FontSize="20"/>
        <ComboBox x:Name="comboBoxArtOdgovaraModelu" HorizontalAlignment="Left" Margin="501,656,0,0" VerticalAlignment="Top" Width="250" Height="38" FontSize="20"/>
