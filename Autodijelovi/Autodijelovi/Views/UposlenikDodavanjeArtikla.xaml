        <Button Content="Dodaj artikal" HorizontalAlignment="Left" Margin="1000,747,0,0" VerticalAlignment="Top" FontSize="20" Width="212" Height="46" Click="Button_Click1"/>
        <TextBox x:Name="textBoxArtMaloprodajna" HorizontalAlignment="Left" Margin="1104,241,0,0" Text="" VerticalAlignment="Top" Width="244" FontSize="20" Height="46"/>
        <TextBox x:Name="textBoxArtVeleprodajna" HorizontalAlignment="Left" Margin="1104,331,0,0" Text="" VerticalAlignment="Top" Width="244" FontSize="20" Height="46"/>
