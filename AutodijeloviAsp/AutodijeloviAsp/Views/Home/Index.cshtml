@{
    ViewBag.Title = "Home Page";
}



<!DOCTYPE html>
<html lang="en">
<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <style>
        /* Remove the navbar's default rounded borders and increase the bottom margin */
        .navbar {
            margin-bottom: 50px;
            border-radius: 0;
        }

        /* Remove the jumbotron's default bottom margin */
        .jumbotron {
            margin-bottom: 0;
            padding-top: 240px;
            background-image: url(https://www.cashforcarhamilton.nz/wp-content/uploads/2017/05/used-auto-parts-hamilton.png);
            background-size: 100% 100%;
        }

            .jumbotron .h1, .jumbotron h1 {
                color: black;
                font-size: 80px;
                font-weight: bold;
                font-family: 'Shift', sans-serif;
                //position: absolute;
            }

        .panel-body img {
            height: 250px;
            width: 100%;
        }
        /* Add a gray background color and some padding to the footer */
        footer {
            background-color: #f2f2f2;
            padding: 25px;
        }
    </style>
</head>
<body>

    <div class="jumbotron" style="" >
        <div class="container text-center">
            <h1>AUTODIJELOVI KAMENI</h1>
            <p></p>
        </div>
    </div>

    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">O nama</a>
            </div>
            <div class="collapse navbar-collapse" id="myNavbar">
                <ul class="nav navbar-nav">
                    <li><a href="#">Pocetna</a></li>
                    <li><a href="#">Katalog</a></li>
                    <li><a href="#">Servis</a></li>
                    <li><a href="#">Prodajna mjesta</a></li>
                    <li><a href="#">Kontakt</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="#"><span class="glyphicon glyphicon-user"></span> Vaš račun</a></li>
                    <li><a href="#"><span class="glyphicon glyphicon-shopping-cart"></span> Cart</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        <div class="row">
            <div class="col-sm-4">
                <div class="panel panel-primary">
                    <div class="panel-heading">AKCIJA</div>
                    <div class="panel-body"><img src="~/Slike/volann.jpg" class="img-responsive"  alt="Image"></div>
                    <div class="panel-footer">Volkswagen volan po najpovoljnijoj cijeni</div>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="panel panel-danger">
                    <div class="panel-heading">AKCIJA</div>
                    <div class="panel-body"><img src="~/Slike/gume.jpg" class="img-responsive"  alt="Image"></div>
                    <div class="panel-footer">Popust i do 30% !!!</div>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="panel panel-success">
                    <div class="panel-heading">AKCIJA</div>
                    <div class="panel-body"><img src="~/Slike/brisaci.jpg" class="img-responsive"  alt="Image"></div>
                    <div class="panel-footer">Za bolju vidljivost, brisaci sa popustom i do 50%</div>
                </div>
            </div>
        </div>
    </div><br>

    <div class="container">
        <div class="row">
            <div class="col-sm-4">
                <div class="panel panel-primary">
                    <div class="panel-heading">AKCIJA</div>
                    <div class="panel-body"><img src="~/Slike/retrovizor.jpg" class="img-responsive" style="width:100%" alt="Image"></div>
                    <div class="panel-footer">Radi opreznije vožnje, priuštite si najkvalitetnije retrovizore po najpovoljnijoj cijeni</div>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="panel panel-danger">
                    <div class="panel-heading">AKCIJA</div>
                    <div class="panel-body"><img src="~/Slike/rucice.jpg" class="img-responsive" style="width:100%" alt="Image"></div>
                    <div class="panel-footer">Ručice za automatski mijenjac, budite brži od brzine!!!</div>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="panel panel-success">
                    <div class="panel-heading">AKCIJA</div>
                    <div class="panel-body"><img src="~/Slike/sjedista.jpg" class="img-responsive" style="width:100%" alt="Image"></div>
                    <div class="panel-footer">Za najveću udobnost, sjedišta sa popustom do 40% !!!</div>
                </div>
            </div>
        </div>
    </div><br><br>

    

</body>
</html>


